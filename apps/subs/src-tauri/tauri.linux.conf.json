{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ears-frontend",
  "version": "0.1.0",
  "identifier": "com.byteowlz.ears-subs",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "bun dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "title": "ears-subs",
        "width": 1440,
        "height": 70,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "alwaysOnTop": true,
        "transparent": false,
        "shadow": true,
        "skipTaskbar": false,
        "visible": true,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' ws://localhost:* http://localhost:*; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; media-src 'self' blob: mediastream:; img-src 'self' data: blob:"
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
